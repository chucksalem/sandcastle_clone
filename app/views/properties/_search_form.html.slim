form#search_filter.gw.no-gutter data-toggle="validator" action="#{accommodations_path}" method="get"
  fieldset.g.sm-one-whole.md-five-twelfths.width-15
    .select-style.inner-addon.right-addon
      i.fa.fa-bed aria-hidden="true" 
      select#select-drop name="rooms" required=""
        = options_for_select(areas, @area)
    span.text-divider
  fieldset.g.sm-one-third.md-one-seventh.width-15.inner-addon.right-addon
    input#start_date.no-borders.datepicker.arrival-date autocomplete="off" name="start_date" placeholder=("CHECK IN") readonly="readonly" type="text" required="" /
    i.fa.fa-calendar aria-hidden="true" 
    span.text-divider
  fieldset.g.sm-one-third.md-one-seventh.width-15.inner-addon.right-addon
    input#end_date.no-borders.datepicker.depart-date autocomplete="off" name="end_date" placeholder=("CHECK OUT") readonly="readonly" type="text" required="" /
    i.fa.fa-calendar aria-hidden="true" 
    span.text-divider
  fieldset.g.sm-one-fourth.md-one-eighth.text-align-right.width-15
    label.is-visually-hidden for="guests"  Guests
    .select-style.inner-addon.left-addon
      i.fa.fa-user aria-hidden="true" 
      select#guests.drop-options name="guests"
        = options_for_select(guests)
  footer.g.md-two-twelfths
    input.btn.max-width.search-btn.sandcastle-text-capitalization type="submit" value="Search"
